<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <!--상단바 만들기-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#4b89dc"
            android:orientation="horizontal">

            <!--로고 박아놓기-->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/logo_white2" />
        </LinearLayout>


        <Button
            android:id="@+id/gotolist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/resizeicon3"
            android:text="점검조회"
            android:onClick="SearchActivity"
            android:textSize="34sp"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/myInformationButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/resizeicon5"
            android:text="개인정보"
            android:textSize="34sp"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/qrCodeButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/resizeicon4"
            android:text="QR코드"
            android:textSize="34sp"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="30dp" />

    </LinearLayout>
</LinearLayout>