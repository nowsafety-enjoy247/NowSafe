<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5559b4"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#4b89dc"
                android:theme="@style/Theme.NavigationDrawer">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginRight="60dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/logo_white2"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/BtnNum1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/bnt11"
                    android:textSize="22dp"
                    android:text="\n\n\n\n장비 착용 확인을 위한 카메라"
                    app:cornerRadius="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/checklist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/btn2"
                android:textSize="22dp"
                android:text="\n\n\n\n화재 대비 시설물 점검"
                app:cornerRadius="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gotolist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:onClick="SearchActivity"
                android:background="@drawable/btn3"
                android:textSize="22dp"
                android:text="\n\n\n\n점검 결과표 확인 게시판"
                app:cornerRadius="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/qrCodeButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:textSize="22dp"
                android:text="\n\n\n\n본인 확인을 위한 QR코드"
                android:background="@drawable/bnt4"
                app:cornerRadius="30dp" />

        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="280dp"
        android:layout_height="482dp"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/managerinfomation"/>
</androidx.drawerlayout.widget.DrawerLayout>

